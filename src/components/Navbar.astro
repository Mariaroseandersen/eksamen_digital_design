---
import { Image } from "astro:assets";
import logo from "../assets/images/logo.webp";
---

<div x-data="{ showmenu: false }" class="w-full bg-GoldenRetriever-500">
  <!-- Navbar Container -->
  <div class="flex items-center justify-between px-6 md:px-16 py-6">
    <!-- Logo (Venstre) -->
    <div id="logo">
      <a href="/" class="flex items-center">
        <Image class="w-auto h-12" src={logo} alt="Logo" />
      </a>
    </div>

    <!-- Desktop Menu (Centreret) -->
    <nav id="desktopmenu" class="absolute left-1/2 transform -translate-x-1/2 hidden lg:block">
      <ul class="flex gap-custom90 text-base font-poppins text-BarkingAtTheMoon-500">
        <li><a href="/pricing" class="hover:text-BarkingAtTheMoon-400 transition duration-300">Pricing</a></li>
        <li><a href="/themenu" class="hover:text-BarkingAtTheMoon-400 transition duration-300">The Menu</a></li>
        <li><a href="/ourstory" class="hover:text-BarkingAtTheMoon-400 transition duration-300">Our Story</a></li>
        <li><a href="/form" class="hover:text-BarkingAtTheMoon-400 transition duration-300">Get Started</a></li>
      </ul>
    </nav>

    <!-- CTA (HÃ¸jre) -->
    <div id="cta" class="hidden lg:flex items-center gap-8">
      <button class="flex items-center justify-center border border-BarkingAtTheMoon-500 rounded-custom50px px-4 py-1 font-poppins text-BarkingAtTheMoon-600">
        IE <span class="ml-1">&#9662;</span>
      </button>
      <a href="/login" class="font-poppins text-BarkingAtTheMoon-500 hover:text-BarkingAtTheMoon-400 transition duration-300">Log In</a>
    </div>

    <!-- Burger Menu (Mobil) -->
    <button id="burgermenu" class="lg:hidden" x-on:click="showmenu = ! showmenu">
      <span :class="{ 'rotate-45 translate-y-2': showmenu }" class="block w-8 h-0.5 bg-BarkingAtTheMoon-700 mb-2 transition-all duration-300"></span>
      <span :class="{ 'opacity-0': showmenu }" class="block w-8 h-0.5 bg-BarkingAtTheMoon-700 mb-2 transition-all duration-300"></span>
      <span :class="{ '-rotate-45 -translate-y-2': showmenu }" class="block w-8 h-0.5 bg-BarkingAtTheMoon-700 transition-all duration-300"></span>
    </button>
  </div>

  <!-- Mobilmenu -->
  <nav id="mobilmenu" class="lg:hidden bg-GoldenRetriever-500" x-show="showmenu" x-transition>
    <ul class="flex flex-col items-center gap-6 py-4 text-BarkingAtTheMoon-600 font-poppins">
      <li><a href="/pricing" class="hover:text-BarkingAtTheMoon-400">Pricing</a></li>
      <li><a href="/themenu" class="hover:text-BarkingAtTheMoon-400">The Menu</a></li>
      <li><a href="/ourstory" class="hover:text-BarkingAtTheMoon-400">Our Story</a></li>
      <li><a href="/form" class="hover:text-BarkingAtTheMoon-400">Get Started</a></li>
    </ul>
  </nav>
</div>




